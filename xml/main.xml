<?xml version="1.0" encoding="UTF-8" ?>
<Module>
        <ModulePrefs title="Hangout Starter">
                <Require feature="rpc" />
                <Require feature="views" />
                <Require feature="locked-domain" />
        </ModulePrefs>
        <Content type="html"><![CDATA[

<html>

<link rel='stylesheet' href='https://stark-hamlet-6630.herokuapp.com/stylesheets/main.css' />

<body>

  <h3>Simple Hangout App</h3>

  <p>
  <input class="button" type="button" value="Show participants!" id="showParticipants"
      style="visibility:hidden;"
      onClick="showParticipants()"/>
  </p>

  <div id="participantsDiv"></div>

  <hr>

  <form action="/tip" method="post">
    <button name="tip" value="some_id">Tip</button>
  </form>

  <hr>

  <p><a href="http://developers.google.com/+/hangouts/getting-started">Read the docs</a> to learn more about developing hangouts!</a></p>

  <script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script src="https://stark-hamlet-6630.herokuapp.com/javascripts/main.js"></script>
  <script>
  // Wait for gadget to load.
  gadgets.util.registerOnLoadHandler(init);
  </script>

</body>
</html>
]]>
</Content>
</Module>
